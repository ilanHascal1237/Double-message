<form method="POST"
    style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="form-control" value={{contact.name}}>
    </div>
    <div class="form-group">
        <label>Phone number</label>
        <input type="text" name="phone" class="form-control" value={{contact.phone}}>
    </div>
    {{#if isNewContact}}
    <div class="form-group">
        <button class="btn btn-success">Create Contact</button>
    </div>
    {{else}}
    <div class="form-group">
        <button class="btn btn-success">Update Contact</button>
    </div>
    {{/if}}
</form>